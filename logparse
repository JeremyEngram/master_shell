#!/bin/bash
#LOGPARSE - A USER HUMAN READABLE LOG REPORT SUMMARY USING COMMAND SUBSTITUTION 
#
#DEFINE LOG DIRECTORY
LOGDIR=/var/log/

#DEFINE BASIC SYSTEM IDENT INFORMATION VIA COMMAND SUBSTITUTION
echo "SYSTEM HOSTNAME IS $($HOSTNAME)"
echo "SYSTEM USER IS $USER"


$LOGDIR/auth.log

$LOGDIR/apt/term.log
$LOGDIR/apt/history.log



echo -n "EMAIL LOG TO:> "
read EMAILADDR
echo $DUMPSYSINFO.$BENCHMARK | mail -s "$HOSTNAME SYSTEM DUMPSYSINFO" $EMAILADDR && echo "EMAILED LOGPARSE LOG REPORT SYSTEM INFO TO ADMINISTRATOR AT $EMAILADDR"
