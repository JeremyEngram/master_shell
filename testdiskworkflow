while 

  find . -type f | perl -ne 'print $1 if m/\.([^.\/]+)$/' | sort -u | tee -a dirs;
  xargs -I {} mkdir -p "{}" < dirs;
  sed -e 's/^/*./' dirs > filexe;

do 

